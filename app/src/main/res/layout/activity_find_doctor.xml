<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:context=".FindDoctor">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="15dp"
            android:paddingStart="25dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu1"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingBottom="7dp"
                    />

                <TextView
                    android:id="@+id/textgeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textgeneral"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="18dp"
                    android:textColor="@color/gray_3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/lungs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lungs"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="33dp"
                    android:paddingBottom="7dp"
                    />
                <TextView
                    android:id="@+id/textlungs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textlungs"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="3dp"
                    android:textColor="@color/gray_3"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/dentist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dentist"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingBottom="7dp"
                    />
                <TextView
                    android:id="@+id/textdentist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textdentist"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gray_3"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/psychiatrist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/psychiatrist"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingRight="25dp"
                    android:paddingStart="29dp"
                    android:paddingBottom="7dp"
                    />
                <TextView
                    android:id="@+id/textpsychiatrist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textpsychiatrist"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="15dp"
                    android:textColor="@color/gray_3"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/covid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/covid"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingBottom="7dp"
                    />

                <TextView
                    android:id="@+id/doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textcovid"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="16dp"
                    android:textColor="@color/gray_3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/surgeon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/surgeon"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="33dp"
                    android:paddingBottom="7dp"
                    />
                <TextView
                    android:id="@+id/textsurgeon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textsurgeon"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="21dp"
                    android:textColor="@color/gray_3"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/cardiologist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cardiologist"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="35dp"
                    android:paddingBottom="7dp"
                    />
                <TextView
                    android:id="@+id/textcardiologist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textcardiologist"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="15dp"
                    android:textColor="@color/gray_3"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/recommended_doctors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recommended_doctors"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="15dp"
            android:paddingLeft="25dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/border_image"
            >
            <ImageButton
                android:id="@+id/doct1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list1"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingLeft="15dp"
                android:paddingBottom="7dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"

                >
                <TextView
                    android:id="@+id/parel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/parel"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingTop="15dp"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:id="@+id/doctorcardiologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/cardiologist"
                    android:textColor="@color/gray_2"
                    android:textSize="12sp"/>
                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="126dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/rating"/>
                <ImageView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="86dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/location"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/recent_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recent_doctor"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="15dp"
            android:paddingLeft="25dp"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/drparel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/findlist1"
                        android:background="@color/white"
                        android:paddingTop="15dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="15dp"
                        android:paddingBottom="7dp"
                        />
                    <TextView
                        android:id="@+id/drparelname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/firstparel"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/drfanny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/findlist2"
                        android:background="@color/white"
                        android:paddingTop="15dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="15dp"
                        android:paddingBottom="7dp"
                        />
                    <TextView
                        android:id="@+id/drfannyaname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/firstfanny"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="13dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/drmicu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/list3"
                        android:background="@color/white"
                        android:paddingTop="15dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="15dp"
                        android:paddingBottom="7dp"
                        />
                    <TextView
                        android:id="@+id/drmicuaname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/firstmicu"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/drmuzaki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/findlist4"
                        android:background="@color/white"
                        android:paddingTop="15dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="15dp"
                        android:paddingBottom="7dp"
                        />
                    <TextView
                        android:id="@+id/drmuzakianame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/firstmuzaki"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="9dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>